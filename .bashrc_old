#export SEL_BROWSER='*chrome C:\Program Files\Mozilla Firefox\firefox.exe'
#export SEL_BROWSER="*iexplore C:\Program Files (x86)\Internet Explorer\iexplore.exe"
#export SEL_BROWSER='*iexplore'  # C:\Program Files\Internet Explorer\iexplore.exe"
#export SEL_SERVER='10.224.29.139'  #laptop
#export SEL_SERVER='10.10.210.101' # ie6
#export SEL_SERVER='10.10.210.102' # ie7
#export SEL_SERVER='10.10.210.103' #ie8

#export CHECK_FOR_JS_ERRORS='true'
#export SEL_TAKE_SCREENSHOTS='true'
#export RAILS_ENV='false'
#export SEL_PERSISTENT='false'

export TEST_SPEC_FORMAT='specdoc'
export screenshot_root='/tmp'
export QA_CONFIG_DIR=/export/web/config

if [ -d ~/.rbenv ]; then
  export PATH="$HOME/.rbenv/bin:$PATH"
  eval "$(rbenv init -)"
fi

CHRUBY_FILE=/usr/local/opt/chruby/share/chruby/chruby.sh
if [ -f "$CHRUBY_FILE" ]; then
  source $CHRUBY_FILE
  source /usr/local/opt/chruby/share/chruby/auto.sh
fi
