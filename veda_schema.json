{
    "$id": "foo",
    "description": "multimedia metadata schema for movies",
    "title": "movie",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "original_name": { "type": "string" },
        "notes": { "type": "string" },
        "tags": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": ["4k", "3D"]
            }
        },
        "issues": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": ["subtitle-missing", "subtitle-offsync", "plex-transcode", "plex-subtitle", "title-special-chars"]
            }
        }
    }
}
